@model IList<MemberViewModel>;

<h1>Members</h1>

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>View / Edit</th>
    </tr>

    @foreach (var member in Model)
    {
<tr>
    <td>@member.Id</td>
    <td>@member.Name</td>
    <td>@member.Address</td>
    <td>@member.PhoneNumber</td>
    <td><a href="/members/MemberPage/@member.Id"><button>View / Edit</button></a></td>
</tr>
    }
</table>

<br />
<a href="/members/New"><button>Add new Member</button></a>