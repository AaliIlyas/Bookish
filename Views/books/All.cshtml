@model IList<BookViewModel>;

<h1>Books</h1>

    @{
        if (Model.Count == 0)
        {
            <div class="">
                <p>Looks like your library has no books!</p>
                <br />
                <p>Add a new book below</p>
            </div>
        }
        else
        {
            <table>
                <tr>
                    <th>Id</th>
                    <th>Author</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Number of Copies</th>
                    <th>View / Edit</th>
                </tr>

            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Author</td>
                    <td>@book.Title</td>
                    <td>@book.Genre</td>
                    <td>@book.NumberOfCopies</td>
                    <td><a href="/books/bookpage/@book.Id"><button>View / Edit</button></a></td>
                </tr>
            }
            </table>
        }
    }

<br />
<a href="/books/new">Create new book</a>